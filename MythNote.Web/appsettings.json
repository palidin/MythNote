{
  "ConnectionStrings": {
    "SqliteConnection": "Data Source=myth-note.db",
    "MysqlConnection": "Server=127.0.0.1;Port=3306;Database=myth-note;User=root;Password=root;Charset=utf8mb4;"
  },
  "Database": {
    "Engine": "Sqlite",
    "Connection": "SqliteConnection"
  },
  "Users": [
    {
      "Name": "mythnote",
      "Password": "mythnote"
    }
  ],
  "Jwt": {
    "SecretKey": "your-very-long-secret-key-at-least-32-characters-long",
    "Issuer": "MythNoteApi",
    "Audience": "MythNoteApiClient",
    "ExpiresInMinutes": "30",
    "RefreshExpiresInDays": "7"
  },
  "Upload": {
    "Folder": "./uploads",
    "Host": "/uploads",
    "Extensions": {
      "Image": "jpg|jpeg|png|gif|webp"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
